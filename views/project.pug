extends layout.pug

block content 
  nav.grid-container.portfolio-breadcrumb
    a(href='/') ‚Üê Back
  article.grid-container.portfolio-intro.portfolio-project
    .grid-x
      .cell.small-6.medium-9.large-9

        h1 #{projects[id].project_name}

        p.lead.text-light
          | #{projects[id].description}

      .cell.portfolio-meta.small-6.medium-2.large-3
        h6 #{projects[id].technologies}

        ul
          each technology in techonologies
            li #{technology}

        a.button.expanded(href=`${live_link}`) Live Demo
        a.button.expanded(href=`${github_link}`) GitHub Repo
    
    img.image(src='/static/images/Project-1.png')
    img.image(src='/static/images/Project-1b.png')
    img.image(src='/static/images/Project-1c.png')