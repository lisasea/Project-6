extends layout.pug

block content 
  article.grid-container.portfolio-intro
    div 
      h1 FSJS Portfolio
      p.lead.text-light
        | Nice to meet you.  Please have a look around at the projects I have completed in a Full Stack JavaScript Tech Degree program!
  article.grid-container.portfolio-index
    
    .grid-x.grid-margin-x.small-up-2.medium-up-2.large-up-3

      each project in projects
        .cell
          a(href=`/projects/${project.id}`) 
            img.thumbnail(src=`/static/images/${project.image_urls[0]}`)
            h5= #{project.project_name}

      
